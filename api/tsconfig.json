{
  "exclude": ["./coverage", "./dist", "__tests__", "jest.config.ts"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": [
    "./src/**/*.ts",
    "../common/**/*.ts",
  ],
  "compilerOptions": {
    "isolatedModules": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
